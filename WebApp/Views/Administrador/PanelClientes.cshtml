<!-- formulario de detalle de cliente -->
<dialog class="popup" id="detalleClienteModal">
    
    <!-- Detalle membresía -->

    <dialog class="popup" id="infoMembresiaModal">

        <div class="form">
            <div class="input-container">
                <label>Identificador</label>
                <input type="text" class="regular-form-input" name="IdDetalleMembresia" disabled>
            </div>

            <div class="input-container">
                <label>Descripción</label>
                <input type="text" class="regular-form-input" name="Tipo" disabled>
            </div>

            <div class="multiple-input-container">
                <div class="input-container">
                    <label>Duración (Días)</label>
                    <input type="number" class="regular-form-input" name="DuracionDias" disabled>
                </div>
                <div class="input-container">
                    <label>Duración (Meses)</label>
                    <input type="number" class="regular-form-input" name="DuracionMeses" disabled>
                </div>

            </div>
            <div class="input-container">
                <label>Precio (ARS)</label>
                <input type="number" class="regular-form-input" name="Precio" disabled>
            </div>
            <div class="input-container">
                <button type="button" class="regular-form-submit-btn form-action-btn" id="cerrarDetalleMembresiaBtn">Cerrar</button>
            </div>

        </div>

    </dialog>




    <!-- formulario de registro de pago -->
    <dialog class="popup" id="registrarPagoModal">
        <h2>Pago de membresía</h2>
        <form asp-action="RegistrarPago" method="post" class="form">
            <div class="multiple-input-container">
                <div class="input-container">
                    <label>DNI del Cliente</label>
                    <input type="text" class="regular-form-input" name="DniCliente" asp-for="Dni" readonly>
                </div>

                <div class="input-container">
                    <label>Membresía</label>
                    <select class="regular-form-input" id="membresiaSelect" name="IdMembresia" asp-for="IdMembresia">
                    </select>
                </div>

            </div>

            <div class="input-container">
                <label>Vencimiento actual</label>
                <input type="text" class="regular-form-input" name="vencimientoActual" readonly>
            </div>
            <div class="input-container">
                <label>Vencimiento actualizado</label>
                <input type="text" class="regular-form-input" name="vencimientoNuevo" readonly>
            </div>
            <div class="input-container">
                <label>Monto a pagar (ARS)</label>
                <input type="text" class="regular-form-input" name="precioMembresia" disabled>
            </div>

            <div class="multiple-input-container" style="margin-top: 1.25rem;">
                <button type="submit" class="regular-form-submit-btn form-action-btn">Renovar</button>
                <button type="button" class="cancel-btn regular-form-cancel-btn form-action-btn">Cancelar</button>
            </div>
        </form>
    </dialog>



    <!-- pagos del cliente -->
    <dialog class="popup popup--table" id="pagosClienteModal">
        <h2>Pagos del cliente</h2>
        <form class="form">
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id de Pago</th>
                            <th>Id de Membresía</th>
                            <th>Fecha de pago</th>
                            <th>Monto</th>
                        </tr>
                    </thead>
                    <tbody id="pagosClienteTableBody">
                    </tbody>
                </table>
            </div>
            <div class="input-container">
                <button type="button" class="cancel-btn regular-form-cancel-btn form-action-btn" id="cerrarPagosClienteModal">Cerrar</button>
            </div>
        </form>
    </dialog>





    <!-- detalles cliente-->
    <h2>Detalles del cliente</h2>
    <form class="form">


        <div class="multiple-input-container">
            <div class="input-container">
                <label>Identificador</label>
                <input type="text" class="regular-form-input" name="IdCliente" readonly>
            </div>
            <div class="input-container">
                <label>Identificador de Membresía</label>
                <div class="input-search-container">
                    <input type="text" class="regular-form-input" name="IdMembresia" readonly>
                    <button type="button" id="mostrarDetalleMembresiaBtn"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </div>
        </div>


        <div class="multiple-input-container">
            <div class="input-container">
                <label>Nombre</label>
                <input type="text" class="regular-form-input" name="Nombre" disabled>
            </div>
            <div class="input-container">
                <label>Apellido</label>
                <input type="text" class="regular-form-input" name="Apellido" disabled>
            </div>
        </div>
        <div class="multiple-input-container">
            <div class="input-container">
                <label>DNI</label>
                <input type="text" class="regular-form-input" name="Dni" disabled>
            </div>
            <div class="input-container">
                <label>Teléfono</label>
                <input type="tel" class="regular-form-input" name="Telefono" disabled>
            </div>
        </div>
        <div class="input-container">
            <label>Correo electrónico</label>
            <input type="text" class="regular-form-input" name="Email" disabled>
        </div>
        <div class="multiple-input-container">
            <div class="input-container">
                <label>Fecha de nacimiento</label>
                <input type="text" class="regular-form-input" name="FechaNacimiento" disabled>
            </div>
            <div class="input-container">
                <label>Sexo</label>
                <input type="text" class="regular-form-input" name="Sexo" disabled>
            </div>
        </div>
        <div class="input-container fecha-vencimiento-cliente-container">
            <label>Vencimiento de la membresía</label>
            <input type="text" class="regular-form-input fecha-vencimiento-cliente" name="FechaVencimiento" disabled>
        </div>
        <div class="multiple-input-container">



            <button type="button" class="cancel-btn regular-form-cancel-btn form-action-btn" id="mostrarRegistrarPagoBtn">Renovar membresía</button>

            <button type="button" class="cancel-btn regular-form-cancel-btn form-action-btn" id="mostrarPagosClienteBtn">Ver pagos</button>


        </div>

        <div class="input-container">
            <button type="button" class="regular-form-submit-btn form-action-btn" id="cerrarDetalleClienteBtn">Cerrar</button>
        </div>
    </form>
</dialog>





