        <nav class="bottom-menu">
            <ul>
                <li>
                    <a asp-controller="Administrador" asp-action="PanelInicio">
                        <button class="bottom-menu-btn">
                            <i class="fa-solid fa-house"></i>
                        </button>
                    </a>
                </li>
                <li>
                    <a asp-controller="Administrador" asp-action="PanelClientes">
                        <button class="bottom-menu-btn active">
                            <i class="fa-solid fa-dumbbell"></i>
                        </button>
                    </a>
                </li>
                <li>
                    <a asp-controller="Administrador" asp-action="PanelMembresias">
                        <button class="bottom-menu-btn">
                            <i class="fa-solid fa-star"></i>
                        </button>
                    </a>
                </li>
                <li>
                    <a asp-controller="Administrador" asp-action="PanelPagos">
                        <button class="bottom-menu-btn">
                            <i class="fa-solid fa-cash-register"></i>
                        </button>
                    </a>
                </li>
                <li>
                    <a asp-controller="Administrador" asp-action="PanelAdministradores">
                        <button class="bottom-menu-btn">
                            <i class="fa-solid fa-unlock-keyhole"></i>
                        </button>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- menu de la izquierda, aparece en pantallas grandes -->
    <nav class="sidebar">
        <ul>
            <li>
                <a asp-controller="Administrador" asp-action="PanelInicio">
                    <button class="sidebar-btn">
                        <i class="fa-solid fa-house"></i>
                        <span>Inicio</span>
                    </button>
                </a>
            </li>
            <li>
                <a asp-controller="Administrador" asp-action="PanelClientes">
                    <button class="sidebar-btn active">
                        <i class="fa-solid fa-dumbbell"></i>
                        <span>Clientes</span>
                    </button>
                </a>
            </li>
            <li>
                <a asp-controller="Administrador" asp-action="PanelMembresias">
                    <button class="sidebar-btn">
                        <i class="fa-solid fa-star"></i>
                        <span>Membresías</span>
                    </button>
                </a>
            </li>
            <li>
                <a asp-controller="Administrador" asp-action="PanelPagos">
                    <button class="sidebar-btn">
                        <i class="fa-solid fa-cash-register"></i>
                        <span>Pagos</span>
                    </button>
                </a>
            </li>
            <li>
                <a asp-controller="Administrador" asp-action="PanelAdministradores">
                    <button class="sidebar-btn">
                        <i class="fa-solid fa-unlock-keyhole"></i>
                        <span>Administradores</span>
                    </button>
                </a>
            </li>

        </ul>
        <ul>
            <li>
                <a asp-controller="Administrador" asp-action="PanelAyuda">
                    <button class="sidebar-btn">
                        <i class="fa-regular fa-circle-question"></i>
                        <span>Ayuda</span>
                    </button>
                </a>
            </li>
            <li>
                <a asp-controller="Administrador" asp-action="PanelPerfil">
                    <button class="sidebar-btn">
                        <i class="fa-solid fa-user"></i>
                        <span>Mi perfil</span>
                    </button>
                </a>
            </li>
        </ul>
    </nav>

    <!-- App -->
    <div class="app dashboard">
        <h1>
            Listado de clientes
        </h1>

        <div class="action-btns">
            <div class="search-box">
                <form action="#" class="search-form" autocomplete="off">
                    <input type="text" placeholder="Buscar registro...">
                    <select>
                        <option>DNI</option>
                        <option>Nombre</option>
                    </select>
                    <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
            </div>
            <div>
                <button class="admin-action-btn" id="registrarClienteBtn">
                    <i class="fa-solid fa-circle-plus"></i>
                    <span>Nuevo registro</span>
                </button>
            </div>
        </div>

        <!-- Lista de administradores -->
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>DNI</th>
                        <th>Nombre completo</th>
                        <th>Teléfono</th>
                        <th>Sexo</th>
                        <th>Id de membresía</th>
                        <th>Vencimiento de membresía</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListaClientes != null && Model.ListaClientes.Any())
                    {
                        @foreach (var item in Model.ListaClientes)
                        {
                            <tr>
                                <td data-label="DNI">
                                    @Html.DisplayFor(modelItem => item.Dni)
                                </td>
                                <td data-label="Nombre">
                                    @($"{item.Nombre} {item.Apellido}")
                                </td>
                                <td data-label="Teléfono">
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td data-label="Sexo">
                                    @Html.DisplayFor(modelItem => item.Sexo)
                                </td>
                                <td data-label="Id de membresía">
                                    @(item.IdMembresia == null ? "Sin membresía" : item.IdMembresia.ToString())
                                </td>
                                <td data-label="Vencimiento de membresía">
                                    @(item.FechaVencimientoMembresia == null ? "Sin membresía" : item.FechaVencimientoMembresia.Value.ToString("dd/MM/yyyy HH:mm"))
                                </td>
                                <td data-label="Acciones" class="table-action-btn-container">
                                    <button class="table-action-btn">
                                        <i class="fa-solid fa-ellipsis"></i>
                                        <div class="action-dropdown-menu">
                                            <a href="javascript:void(0);" onclick="mostrarDetalleClienteModal('@item.Id')">Detalle</a>
                                            <a href="javascript:void(0);" onclick="mostrarEliminarClienteModal('@item.Id')">Eliminar</a>
                                            <a href="javascript:void(0);" onclick="mostrarModificarClienteModal('@item.Id')">Editar</a>
                                        </div>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" style="text-align: center;">
                                No hay clientes disponibles.
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</main>

