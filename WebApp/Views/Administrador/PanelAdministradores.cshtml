@{
    ViewData["Title"] = "Panel de Administradores";
}

@using WebApp.Models.Administrador
@model PanelAdminModel

<head>
    <script src="~/js/services/busquedaService.js" type="module" defer></script>
    <script src="~/js/services/panelAdminService.js" type="module" defer></script>
    <script src="~/js/general/tables.js" defer></script>
    <link rel="stylesheet" href="~/css/layout/admin-dashboard.css">

</head>


<!-- Formulario de registro de administrador -->
<dialog class="popup" id="registrarAdminModal">
    <h2>Nuevo administrador</h2>
    <form asp-action="RegistrarAdmin" method="post" class="form">
        <div class="multiple-input-container">
            <div class="input-container">
                <label>Nombre</label>
                <input type="text" class="regular-form-input" asp-for="Nombre" autocomplete="off" required>
            </div>
            <div class="input-container">
                <label>Apellido</label>
                <input type="text" class="regular-form-input" asp-for="Apellido" autocomplete="off" required>
            </div>
        </div>
        <div class="multiple-input-container">
            <div class="input-container">
                <label>DNI</label>
                <input type="text" class="regular-form-input" asp-for="Dni" autocomplete="off" required>
            </div>
            <div class="input-container">
                <label>Teléfono</label>
                <input type="tel" class="regular-form-input" asp-for="Telefono" autocomplete="off" required>
            </div>
        </div>
        <div class="input-container">
            <label>Correo electrónico</label>
            <input type="text" class="regular-form-input" asp-for="Email" autocomplete="off" required>
        </div>
        <div class="multiple-input-container">
            <div class="input-container">
                <label>Usuario</label>
                <input type="text" class="regular-form-input" asp-for="Usuario" autocomplete="off" required>
            </div>
            <div class="input-container">
                <label>Contraseña</label>
                <input type="password" class="regular-form-input" asp-for="Contraseña" autocomplete="off" required>
            </div>
        </div>
        <div class="input-container">
            <label>Fecha de nacimiento</label>
            <input class="regular-form-input" type="date" asp-for="FechaNacimiento" required>
        </div>
        <div class="input-container">
            <label>Sexo</label>
            <select class="regular-form-input" name="Sexo" asp-for="Sexo" required>
                <option value="" selected disabled>Seleccione una opción</option>
                <option value="0">Masculino</option>
                <option value="1">Femenino</option>
                <option value="2">Otro</option>
            </select>
        </div>
        <div class="multiple-input-container" style="margin-top: 1.25rem;">
            <button type="submit" class="regular-form-submit-btn form-action-btn">Registrar</button>
            <button type="button" class="cancel-btn regular-form-cancel-btn form-action-btn">Cancelar</button>
        </div>
    </form>
</dialog>





<!-- formulario de modificacion de administrador -->
<dialog class="popup" id="modificarAdminModal">
    <h2>Modificar administrador</h2>
    <form asp-action="ModificarAdmin" method="post" class="form">

        <div class="input-container">
            <label>Identificador</label>
            <input type="text" class="regular-form-input" name="Id" asp-for="Id" id="id_mod" readonly>
        </div>

        <div class="multiple-input-container">
            <div class="input-container">
                <label>Nombre</label>
                <input type="text" class="regular-form-input" name="Nombre" asp-for="Nombre" id="nombre_mod" autocomplete="off" required>
            </div>
            <div class="input-container">
                <label>Apellido</label>
                <input type="text" class="regular-form-input" name="Apellido" asp-for="Apellido" id="apellido_mod" autocomplete="off" required>
            </div>
        </div>
        <div class="multiple-input-container">
            <div class="input-container">
                <label>DNI</label>
                <input type="text" class="regular-form-input" name="Dni" asp-for="Dni" id="dni_mod" autocomplete="off" required>
            </div>
            <div class="input-container">
                <label>Teléfono</label>
                <input type="tel" class="regular-form-input" name="Telefono" asp-for="Telefono" id="tel_mod" autocomplete="off" required>
            </div>
        </div>
        <div class="input-container">
            <label>Correo electrónico</label>
            <input type="text" class="regular-form-input" name="Email" asp-for="Email" id="email_mod" autocomplete="off" required>
        </div>
        <div class="multiple-input-container">
            <div class="input-container">
                <label>Usuario</label>
                <input type="text" class="regular-form-input" name="Usuario" asp-for="Usuario" id="usuario_mod" autocomplete="off" required>
            </div>
            <div class="input-container">
                <label>Contraseña</label>
                <input type="password" class="regular-form-input" asp-for="Contraseña" id="contraseña_mod" autocomplete="off" required>
            </div>
        </div>
        <div class="input-container">
            <label>Fecha de nacimiento</label>
            <input class="regular-form-input" type="date" asp-for="FechaNacimiento" id="nacimiento_mod" required>
        </div>
        <div class="input-container">
            <label>Sexo</label>
            <select class="regular-form-input" name="Sexo" asp-for="Sexo" id="sexo_mod" required>
                <option value="" selected disabled>Seleccione una opción</option>
                <option value="0">Masculino</option>
                <option value="1">Femenino</option>
                <option value="2">Otro</option>
            </select>
        </div>

        <div class="multiple-input-container" style="margin-top: 1.25rem;">
            <button type="submit" class="regular-form-submit-btn form-action-btn">Modificar</button>
            <button type="button" class="cancel-btn regular-form-cancel-btn form-action-btn">Cancelar</button>
        </div>
    </form>
</dialog>




