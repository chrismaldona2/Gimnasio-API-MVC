<!-- barra de navegacion superior -->
<header class="header">
    <a asp-controller="Administrador" asp-action="PanelInicio" class="logo">
        <img src="/images/logo.png" alt="Logo">
    </a>

    <nav class="nav">
        <ul>
            <li class="profile-btn-container">
                <a>
                    <button class="profile-btn" onclick="mostrarError('Funcion aún no implementada.')">
                        <i class="fa-solid fa-user"></i>
                    </button>
                </a>
            </li>
            <li class="admin-logout-btn-2-container">
                <a asp-controller="Usuario" asp-action="LoginCliente">
                    <button class="admin-logout-btn-2">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i>
                    </button>
                </a>
            </li>
            <li class="admin-logout-btn-container">
                <a asp-controller="Usuario" asp-action="LoginCliente">
                    <button class="admin-logout-btn">
                        <span>Cerrar sesión</span>
                    </button>
                </a>
            </li>
        </ul>
    </nav>
</header>

<main class="main">

    <!-- menu inferior, aparece en pantallas chicas -->
    <div class="bottom-menu-container">
        <nav class="bottom-menu">
            <ul>
                <li>
                    <a asp-controller="Administrador" asp-action="PanelInicio">
                        <button class="bottom-menu-btn">
                            <i class="fa-solid fa-house"></i>
                        </button>
                    </a>
                </li>
                <li>
                    <a asp-controller="Administrador" asp-action="PanelClientes">
                        <button class="bottom-menu-btn">
                            <i class="fa-solid fa-dumbbell"></i>
                        </button>
                    </a>
                </li>
                <li>
                    <a asp-controller="Administrador" asp-action="PanelMembresias">
                        <button class="bottom-menu-btn">
                            <i class="fa-solid fa-star"></i>
                        </button>
                    </a>
                </li>
                <li>
                    <a asp-controller="Administrador" asp-action="PanelPagos">
                        <button class="bottom-menu-btn">
                            <i class="fa-solid fa-cash-register"></i>
                        </button>
                    </a>
                </li>
                <li>
                    <a asp-controller="Administrador" asp-action="PanelAdministradores">
                        <button class="bottom-menu-btn active">
                            <i class="fa-solid fa-unlock-keyhole"></i>
                        </button>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- menu de la izquierda, aparece en pantallas grandes -->
    <nav class="sidebar">
        <ul>
            <li>
                <a asp-controller="Administrador" asp-action="PanelInicio">
                    <button class="sidebar-btn">
                        <i class="fa-solid fa-house"></i>
                        <span>Inicio</span>
                    </button>
                </a>
            </li>
            <li>
                <a asp-controller="Administrador" asp-action="PanelClientes">
                    <button class="sidebar-btn">
                        <i class="fa-solid fa-dumbbell"></i>
                        <span>Clientes</span>
                    </button>
                </a>
            </li>
            <li>
                <a asp-controller="Administrador" asp-action="PanelMembresias">
                    <button class="sidebar-btn">
                        <i class="fa-solid fa-star"></i>
                        <span>Membresías</span>
                    </button>
                </a>
            </li>
            <li>
                <a asp-controller="Administrador" asp-action="PanelPagos">
                    <button class="sidebar-btn">
                        <i class="fa-solid fa-cash-register"></i>
                        <span>Pagos</span>
                    </button>
                </a>
            </li>
            <li>
                <a asp-controller="Administrador" asp-action="PanelAdministradores">
                    <button class="sidebar-btn active">
                        <i class="fa-solid fa-unlock-keyhole"></i>
                        <span>Administradores</span>
                    </button>
                </a>
            </li>

        </ul>
        <ul>
            <li>
                <a>
                    <button class="sidebar-btn" onclick="mostrarError('Funcion aún no implementada.')">
                        <i class="fa-regular fa-circle-question"></i>
                        <span>Ayuda</span>
                    </button>
                </a>
            </li>
            <li>
                <a>
                    <button class="sidebar-btn" onclick="mostrarError('Funcion aún no implementada.')">
                        <i class="fa-solid fa-user"></i>
                        <span>Mi perfil</span>
                    </button>
                </a>
            </li>
        </ul>
    </nav>


    <!-- App -->
    <div class="app">
        <h1>
            Listado de administradores
        </h1>

        <div class="action-btns">
            <div class="search-box">
                <form action="#" class="search-form">
                    <input type="text" placeholder="Buscar registro..." autocomplete="off">
                    <select>
                        <option>Usuario</option>
                        <option>DNI</option>
                        <option>Nombre</option>
                    </select>
                    <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
            </div>
            <div>
                <button class="admin-action-btn" id="registrarAdminBtn">
                    <i class="fa-solid fa-circle-plus"></i>
                    <span>Nuevo registro</span>
                </button>
            </div>
        </div>

        <!-- Lista de administradores -->

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>DNI</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Fecha de nacimiento</th>
                        <th>Sexo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListaAdministradores)
                    {
                        <tr>
                            <td data-label="Usuario">
                                @Html.DisplayFor(modelItem => item.Usuario)
                            </td>
                            <td data-label="DNI">
                                @Html.DisplayFor(modelItem => item.Dni)
                            </td>
                            <td data-label="Nombre">
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td data-label="Apellido">
                                @Html.DisplayFor(modelItem => item.Apellido)
                            </td>
                            <td data-label="Email">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td data-label="Teléfono">
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>
                            <td data-label="Fecha de nacimiento">
                                @item.FechaNacimiento.ToString("dd/MM/yyyy")
                            </td>
                            <td data-label="Sexo">
                                @Html.DisplayFor(modelItem => item.Sexo)
                            </td>
                            <td data-label="Acciones" class="table-action-btn-container">
                                <button class="table-action-btn">
                                    <i class="fa-solid fa-ellipsis"></i>
                                    <div class="action-dropdown-menu">
                                        <a href="javascript:void(0);" onclick="mostrarEliminarAdminForm('@item.Id', '@item.Nombre', '@item.Apellido', '@item.Dni', '@item.Telefono', '@item.Email', '@item.Usuario', '@item.FechaNacimiento.Day', '@item.FechaNacimiento.Month', '@item.FechaNacimiento.Year', '@item.Sexo')">Eliminar</a>
                                        <a href="javascript:void(0);" onclick="mostrarModificarAdminForm('@item.Id', '@item.Nombre', '@item.Apellido', '@item.Dni', '@item.Telefono', '@item.Email', '@item.Usuario', '@item.FechaNacimiento.Day', '@item.FechaNacimiento.Month', '@item.FechaNacimiento.Year', '@((int)(item.Sexo))')">Editar</a>
                                    </div>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>