                <label>Nombre</label>
                <input type="text" class="regular-form-input" id="nombre_mod" name="Nombre" asp-for="Nombre" autocomplete="off" required>
            </div>
            <div class="input-container">
                <label>Apellido</label>
                <input type="text" class="regular-form-input" id="apellido_mod" name="Apellido" asp-for="Apellido" autocomplete="off" required>
            </div>
        </div>
        <div class="multiple-input-container">
            <div class="input-container">
                <label>DNI</label>
                <input type="text" class="regular-form-input" id="dni_mod" name="Dni" asp-for="Dni" autocomplete="off" required>
            </div>
            <div class="input-container">
                <label>Teléfono</label>
                <input type="tel" class="regular-form-input" id="tel_mod" name="Telefono" asp-for="Telefono" autocomplete="off" required>
            </div>
        </div>
        <div class="input-container">
            <label>Correo electrónico</label>
            <input type="text" class="regular-form-input" id="email_mod" name="Email" asp-for="Email" autocomplete="off" required>
        </div>
        <div class="multiple-input-container">
            <div class="input-container">
                <label>Usuario</label>
                <input type="text" class="regular-form-input" id="usuario_mod" name="Usuario" asp-for="Usuario" autocomplete="off" required>
            </div>
            <div class="input-container">
                <label>Contraseña</label>
                <input type="password" class="regular-form-input" id="pass_mod" asp-for="Contraseña" autocomplete="off" required>
