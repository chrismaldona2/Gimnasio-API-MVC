        </div>
        <div class="date-selector-input-container">
            <label>Fecha de nacimiento</label>
            <div class="multiple-input-container">
                <div class="input-container">
                    <label class="date-selector-label">Año</label>
                    <select class="regular-form-input" id="año-input-u" name="FechaNacimientoDTO.Año" asp-for="FechaNacimientoDTO.Año" required></select>
                </div>

                <div class="input-container">
                    <label class="date-selector-label">Mes</label>
                    <select class="regular-form-input" id="mes-input-u" name="FechaNacimientoDTO.Mes" asp-for="FechaNacimientoDTO.Mes" required></select>
                </div>

                <div class="input-container">
                    <label class="date-selector-label">Día</label>
                    <select class="regular-form-input" id="dia-input-u" name="FechaNacimientoDTO.Dia" asp-for="FechaNacimientoDTO.Dia" required></select>
                </div>
            </div>
        </div>
        <div class="input-container">
            <label>Sexo</label>
            <select class="regular-form-input" id="sexo_mod" name="Sexo" asp-for="Sexo" required>
                <option value="0">Masculino</option>
                <option value="1">Femenino</option>
                <option value="2">Otro</option>
            </select>
        </div>

        <div class="multiple-input-container">
            <button type="submit" class="regular-form-submit-btn form-action-btn">Modificar</button>
            <button type="button" class="cancel-btn regular-form-cancel-btn form-action-btn">Cancelar</button>
        </div>
    </form>
</dialog>




